<div id="analytics_container">
  <h1 class="text-2xl font-bold mb-4">Analytics for <%= @short_link.short_code %></h1>
  <p class="mb-4">Original URL: <%= @short_link.target_url %></p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="p-4 bg-white rounded-lg shadow">
      <h3 class="font-medium mb-2">Total Clicks</h3>
      <p class="text-4xl font-bold text-blue-600"><%= @total_clicks %></p>
    </div>

    <div class="p-4 bg-white rounded-lg shadow">
      <h3 class="font-medium mb-2">Clicks Over Time</h3>
      <%= line_chart @clicks_by_day, height: '200px' %>
    </div>

    <div class="p-4 bg-white rounded-lg shadow">
      <h3 class="font-medium mb-2">Country Distribution</h3>
      <%= pie_chart @clicks_by_country, height: '200px' %>
    </div>

    <div class="p-4 bg-white rounded-lg shadow">
      <h3 class="font-medium mb-2">Device Types</h3>
      <%= column_chart @clicks_by_referrer, height: '200px' %>
    </div>
  </div>
</div>