<div class="flex flex-col gap-4 py-6">
  <div class="grid md:grid-cols-2 gap-4 sm:grid-cols-1">
    <% @short_links.each do |short_link| %>
      <%= render Card::BaseComponent.new do %>
        <div class="flex flex-col gap-4">
          <div>
            <p class="text-sm text-gray-500 mb-1">Title of the URL:</p>
            <p class="text-gray-800 mb-2">
              <%= short_link.title %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-500 mb-1">Original URL:</p>
            <p class="text-gray-800 mb-2">
              <%= short_link.target_url %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-500 mb-1">Shortened URL:</p>
            <%= link_to redirect_url(short_link.short_code), analytics_path(short_link.short_code),
                        class: "text-blue-600 hover:underline"
            %>
          </div>
          <div>
            <p class="text-sm text-gray-500 mb-1">Total Clicks:</p>
            <p class="text-gray-800 mb-2">
              <%= short_link.clicks_count %>
            </p>
          </div>
          <%= link_to "View Analytics",
                      analytics_path(short_link.short_code),
                      class: "px-4 py-2 text-white bg-slate-900 text-center rounded-md"
          %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
