<div class="bg-white p-6 rounded-lg shadow-sm">
  <h2 class="text-xl font-semibold text-gray-800 mb-4">Time Analysis</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <%#= render(Card::StatsComponent.new(title: "Daily Clicks", number: daily)) %>
    <%= render Stats::TimePeriodListComponent.new(
      title: "Daily",
      period_label: "Date",
      data: daily
    ) %>
    <%= render Stats::TimePeriodListComponent.new(
      title: "Weekly",
      period_label: "Weeks",
      data: weekly
    ) %>
    <%= render Stats::TimePeriodListComponent.new(
      title: "Monthly",
      period_label: "Month",
      data: monthly
    ) %>
  </div>
</div>