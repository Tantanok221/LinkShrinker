<div class="bg-white p-6 rounded-lg shadow-sm">
  <h2 class="text-xl font-semibold text-gray-800 mb-4">Referrers</h2>
  <div class="space-y-2">
    <% data.each do |referrer, count| %>
      <div class="flex justify-between items-center p-3 hover:bg-gray-50 rounded-lg">
        <span class="text-gray-700 truncate">
          <%= referrer.presence || "Direct Traffic" %>
        </span>
        <span class="text-blue-600 font-medium px-2 py-1 rounded">
          <%= count %>
        </span>
      </div>
    <% end %>
  </div>
</div>