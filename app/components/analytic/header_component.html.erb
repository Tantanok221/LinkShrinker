<%= render Card::StatsComponent.new do %>
  <h1 class="text-2xl font-bold text-gray-800">
    Analytics for <%= short_link.short_code %>
  </h1>
  <p class="mt-2 text-gray-600">
    Original URL: <%= link_to short_link.target_url, short_link.target_url,
                              class: "text-blue-600 hover:underline" %>
  </p>
<% end %>
<%= render Card::StatsComponent.new do %>
  <h3 class="text-lg font-semibold mb-2">
    Total Clicks
  </h3>
  <p class="text-3xl font-bold">
    <%= total_clicks %>
  </p>
<% end %>