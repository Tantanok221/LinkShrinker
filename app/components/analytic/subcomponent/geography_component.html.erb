<%= render Card::BaseComponent.new do %>
  <div class="flex flex-col gap-4">
    <%= render(TypographyComponent.new(variant: :h2)) do %>
      Geography
    <% end %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <%= render Stats::TimePeriodListComponent.new(
        title: "Country",
        period_label: "Country",
        data: country
      ) %>
      <%= render Stats::TimePeriodListComponent.new(
        title: "Regions",
        period_label: "Region",
        data: region
      ) %>
      <%= render Stats::TimePeriodListComponent.new(
        title: "Cities",
        period_label: "City",
        data: city
      ) %>
    </div>
  </div>
<% end %>