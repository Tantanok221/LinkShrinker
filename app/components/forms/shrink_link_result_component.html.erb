<div class="p-6 border-slate-200 border w-full flex gap-3 rounded-md gap-4 flex-col md:min-w-md md-max-w-md  max-w-sm"
     data-short-url="<%= @redirect_link %>"
     data-target-url="<%= @target_url %>"
     id="shrink-link-result"
>
  <div class="flex gap-2 flex-col">
    <%= render(TypographyComponent.new(variant: :h2)) do %>
      Your Generated Links
    <% end %>
    <p class="color-slate-950 text-sm">Shortened URL</p>
    <div class="border-slate-200 border rounded-md px-3 py-2 pb-8 pr-10 w-full">
      <%= @redirect_link %>
    </div>
  </div>
  <div class="flex flex-row w-full gap-4">
    <button data-controller="clipboard"
            data-clipboard-text-value="<%= @redirect_link %>"
            data-action="click->clipboard#copy"
            class="px-4 py-2 w-full text-white bg-slate-900 rounded-md"
    >
      Copy via Clipboard
    </button>
    <%= link_to "View Analytics",
                analytics_path(@short_code),
                class: "px-4 py-2 w-full text-white bg-slate-900 text-center rounded-md"
    %>
  </div>
</div>
